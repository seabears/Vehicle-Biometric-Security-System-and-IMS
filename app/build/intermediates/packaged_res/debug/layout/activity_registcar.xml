<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4D3D7"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            tools:ignore="RtlHardcoded">


            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:gravity="left"
                android:padding="5dp"
                android:text="디바이스 번호"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat,RtlHardcoded" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                tools:ignore="HardcodedText,RtlCompat,RtlHardcoded" />

            <Button
                android:id="@+id/scan_device"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:text="디바이스 찾기"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextDeviceId"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/blank_border"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="5dp"
            android:enabled="false"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left"
            android:ems="10"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/textview_border"
            android:text="차량 번호"
            android:padding="5dp"
            tools:ignore="HardcodedText,RtlCompat,RtlHardcoded" />

        <EditText
            android:id="@+id/editTextCarNumber"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/blank_border"
            android:inputType="text"
            android:hint="ex) 11가1111"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText,TextFields" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:ems="10"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/textview_border"
                android:text="차종"
                android:padding="5dp"
                tools:ignore="HardcodedText,RtlCompat,RtlHardcoded" />

            <Spinner
                android:id="@+id/spinnerCarType"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/blank_border"
                android:textSize="18sp"
                android:padding="5dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <Button
            android:id="@+id/selectCar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="저장"
            android:background="@drawable/button_border"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>


</LinearLayout>